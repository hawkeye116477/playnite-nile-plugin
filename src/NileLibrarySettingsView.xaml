<UserControl x:Class="NileLibraryNS.NileLibrarySettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:pcon="clr-namespace:Playnite.Converters"
             xmlns:pcmd="clr-namespace:Playnite.Commands"
             xmlns:local="clr-namespace:NileLibraryNS"
             xmlns:common="clr-namespace:CommonPlugin" xmlns:system="clr-namespace:System"
             mc:Ignorable="d" 
             d:DesignWidth="600" d:DesignHeight="578" Name="NileSettingsUC" Loaded="NileSettingsUC_Loaded">

    <UserControl.Resources>
        <sys:Boolean x:Key="True">True</sys:Boolean>
        <sys:Boolean x:Key="False">False</sys:Boolean>
        <FontFamily x:Key="FontIcoFont">/Fonts/icofont.ttf#icofont</FontFamily>
        <Style TargetType="Separator" BasedOn="{StaticResource HawkeyeSeparatorStyle}" />
        <Style TargetType="Border" BasedOn="{StaticResource HawkeyeBorderStyle}" />
        <Style TargetType="ListBox" BasedOn="{StaticResource HawkeyeListBoxStyle}" />
        <Style TargetType="TextBlock" BasedOn="{StaticResource HawkeyeTextBlockStyle}" />
        <Style TargetType="Button" BasedOn="{StaticResource HawkeyeButtonStyle}" />
        <Style TargetType="Expander" BasedOn="{StaticResource HawkeyeExpanderStyle}" />
        <Style TargetType="TabControl" BasedOn="{StaticResource HawkeyeTabControlStyle}" />
    </UserControl.Resources>

    <TabControl ScrollViewer.VerticalScrollBarVisibility="Disabled"
        HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
        <TabItem Header="{common:Localize Key={x:Static system:LOC.ThirdPartyPlayniteSettingsGeneralLabel}}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <CheckBox DockPanel.Dock="Top" Name="AmazonImportInstalledChk"
                  Margin="0,0,0,15"
                  IsChecked="{Binding Settings.ImportInstalledGames}"
                  Content="{common:Localize Key={x:Static system:LOC.ThirdPartyAmazonSettingsImportInstalledLabel}}"/>

                    <CheckBox DockPanel.Dock="Top" Name="AmazonConnectAccountChk"
                  IsChecked="{Binding Settings.ConnectAccount}"
                  Content="{common:Localize Key={x:Static system:LOC.ThirdPartyAmazonSettingsConnectAccount}}" Checked="AmazonConnectAccountChk_Checked"/>

                    <StackPanel DockPanel.Dock="Top" Margin="40,5,5,5"
                    IsEnabled="{Binding IsChecked, ElementName=AmazonConnectAccountChk}">

                        <CheckBox DockPanel.Dock="Top" Name="AmazonImportUninstalledChk"
                      IsChecked="{Binding Settings.ImportUninstalledGames}"
                      Margin="0,10,0,0"
                      Content="{common:Localize Key={x:Static system:LOC.ThirdPartyAmazonSettingsImportUninstalledLabel}}"/>

                        <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Top" Margin="0,15,5,5" HorizontalAlignment="Left">
                            <ToggleButton HorizontalAlignment="Left" Name="LoginBtn" Content="{common:Localize Key={x:Static system:LOC.ThirdPartyAmazonAuthenticateLabel}}" IsChecked="False" Click="LoginBtn_Click" />
                            <TextBlock VerticalAlignment="Center" Margin="10,5,5,5"  Name="AuthStatusTB" Text="{common:Localize Key={x:Static system:LOC.ThirdPartyAmazonLoginChecking}}">
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <Button Content="{common:Localize Key={x:Static system:LOC.CommonMigrateGamesOriginal},Args='originalPluginShortName=Amazon'}" HorizontalAlignment="Left" Margin="0,8,0,0" Name="MigrateAmazonBtn" IsEnabled="False" Click="MigrateAmazonBtn_Click"  ToolTip="Amazon => Nile"></Button>
                    <Button Content="{common:Localize Key={x:Static system:LOC.CommonRevertMigrateGames}, Args='originalPluginShortName=Amazon'}" HorizontalAlignment="Left" Margin="0,10,0,0" Name="MigrateRevertAmazonBtn" IsEnabled="False" ToolTip="Nile => Amazon" Click="MigrateRevertAmazonBtn_Click"></Button>

                    <CheckBox IsChecked="{Binding Settings.StartGamesWithoutLauncher}"
                  Content="{common:Localize Key={x:Static system:LOC.ThirdPartyAmazonSettingsStartGameDirectly}}"
                  Margin="0,15,0,0" />

                    <StackPanel Margin="0,20,0,0">
                        <TextBlock Text="{common:Localize Key={x:Static system:LOC.ThirdPartyPlayniteExtensionsUpdates}}" FontSize="18"
                        Margin="0,0,0,2" />
                        <Separator Margin="0,0,0,10" />
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="{common:Localize Key={x:Static system:LOC.CommonLauncherUpdatePolicy},Args='launcherName=Nile'}" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                            <ComboBox Grid.Row="0" Grid.Column="1" x:Name="LauncherUpdatesCBo" DisplayMemberPath="Value" SelectedValue="{Binding Settings.LauncherUpdatePolicy}" SelectedValuePath="Key" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="10,0,0,0" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="{common:Localize Key={x:Static system:LOC.CommonGamesUpdatePolicy}}" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                            <ComboBox Grid.Row="0" Grid.Column="1" x:Name="GamesUpdatesCBo" DisplayMemberPath="Value" SelectedValue="{Binding Settings.GamesUpdatePolicy}" SelectedValuePath="Key" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="10,0,0,0" SelectionChanged="GamesUpdatesCBo_SelectionChanged" />
                        </StackPanel>
                        <CheckBox Content="{common:Localize Key={x:Static system:LOC.CommonAutoUpdate}}" Margin="0,0,0,8" Name="AutoUpdateGamesChk" IsChecked="{Binding Settings.AutoUpdateGames}"></CheckBox>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="{common:Localize Key={x:Static system:LOC.CommonDownloadSettings}}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <CheckBox Grid.Column="0" Grid.Row="0"
                            Content="{common:Localize Key={x:Static system:LOC.CommonDisplayDownloadTaskFinishedNotifications}}"
                            IsChecked="{Binding Settings.DisplayDownloadTaskFinishedNotifications}" Margin="0,0,0,8" />
                    <CheckBox Grid.Column="0" Grid.Row="1"
                            Content="{common:Localize Key={x:Static system:LOC.CommonDisplayDownloadSpeedInBits}}"
                            IsChecked="{Binding Settings.DisplayDownloadSpeedInBits}" Margin="0,0,0,8" />
                    <CheckBox Grid.Column="0" Grid.Row="5"
                            Content="{common:Localize Key={x:Static system:LOC.CommonUnattendedInstall}}" ToolTip="{common:Localize Key={x:Static system:LOC.CommonUnattendedInstallToolTip}}"
                            IsChecked="{Binding Settings.UnattendedInstall}" Margin="0,0,0,8 " />
                    <DockPanel Margin="0,0,0,8">
                        <TextBlock Text="{common:Localize Key={x:Static system:LOC.CommonGamesInstallationPath}}" Grid.Row="1" Grid.Column="0"
                               Margin="0,0,8,0" VerticalAlignment="Center" HorizontalAlignment="Left">
                        </TextBlock>
                        <Button Margin="5 0 0 0" DockPanel.Dock="Right"
                            Name="ChooseGamePathBtn" Click="ChooseGamePathBtn_Click" Content="&#xec5b;" 
                            FontFamily="{DynamicResource FontIcoFont}" ToolTip="{common:Localize Key={x:Static system:LOC.ThirdPartyPlayniteSelectDirectoryTooltip}}"
                            VerticalAlignment="Center" />
                        <TextBox Name="SelectedGamePathTxt"
                        Text="{Binding Settings.GamesInstallationPath, UpdateSourceTrigger=PropertyChanged}"
                        VerticalAlignment="Center" />
                    </DockPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="Left" Width="Auto" />
                            <ColumnDefinition x:Name="Right" Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{common:Localize Key={x:Static system:LOC.CommonMaxWorkers}}" Grid.Column="0"
                            Grid.Row="0" Margin="0,0,15,8" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <common:NumericInput Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" MinValue="0" x:Name="MaxWorkersNI" Value="{Binding Settings.MaxWorkers}" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Column="0" Grid.Row="1"
                            Text="{common:Localize Key={x:Static system:LOC.CommonAfterDownloadComplete}}" Margin="0,0,10,8" VerticalAlignment="Center" HorizontalAlignment="Left"  />
                        <ComboBox Grid.Column="1" Grid.Row="1" x:Name="AfterDownloadCompleteCBo" DisplayMemberPath="Value" SelectedValue="{Binding Settings.DoActionAfterDownloadComplete}" SelectedValuePath="Key"  VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Margin="0,0,0,8" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="{common:Localize Key={x:Static system:LOC.CommonAutoRemoveCompletedDownloads}}" Margin="0,0,0,8" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                        <ComboBox Grid.Row="2" Grid.Column="1" x:Name="AutoRemoveCompletedDownloadsCBo" DisplayMemberPath="Value" SelectedValue="{Binding Settings.AutoRemoveCompletedDownloads}" SelectedValuePath="Key" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"  Margin="10,0,0,8" HorizontalAlignment="Left" />
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="{common:Localize Key={x:Static system:LOC.ThirdPartyPlayniteSettingsAdvancedLabel}}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <DockPanel>
                        <TextBlock Text="{common:Localize Key={x:Static system:LOC.CommonLauncherCustomPath},Args='launcherName=Nile'}"
                               Margin="0,0,8,0" VerticalAlignment="Center" HorizontalAlignment="Left">
                        </TextBlock>
                        <Button Name="ChooseLauncherBtn" DockPanel.Dock="Right"
                            Margin="5,0,0,0" Content="&#xec5b;" FontFamily="{DynamicResource FontIcoFont}" Click="ChooseLauncherBtn_Click"
                            ToolTip="{common:Localize Key={x:Static system:LOC.ThirdPartyPlayniteSelectFileTooltip}}" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Settings.SelectedNilePath, UpdateSourceTrigger=PropertyChanged}" x:Name="SelectedNilePathTxt" 
                            VerticalAlignment="Center"/>
                    </DockPanel>
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Text="{common:Localize Key={x:Static system:LOC.CommonCache}}" FontSize="18"
                        Margin="0,0,0,2" />
                        <Separator Margin="0,0,0,10" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{common:Localize Key={x:Static system:LOC.CommonAutoClearCache}}" Margin="0,0,0,8" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                            <ComboBox Grid.Row="0" Grid.Column="1" x:Name="AutoClearCacheCBo" DisplayMemberPath="Value" SelectedValue="{Binding Settings.AutoClearCache}" SelectedValuePath="Key" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"  Margin="10,0,0,8" HorizontalAlignment="Left" />
                            <Button Grid.Row="1" Content="{common:Localize Key={x:Static system:LOC.CommonClearCache}}" Name="ClearCacheBtn" Click="ClearCacheBtn_Click" HorizontalAlignment="Left" />
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="{common:Localize Key={x:Static system:LOC.CommonTroubleshootingInformation}}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{common:Localize Key={x:Static system:LOC.CommonPlayniteVersion}}" Grid.Column="0" Grid.Row="0"
                               Margin="0,0,8,8" VerticalAlignment="Center">
                        </TextBlock>
                        <TextBox x:Name="PlayniteVersionTxt" Grid.Column="1" Grid.Row="0" Margin="0,0,0,8" 
                             VerticalAlignment="Bottom" IsReadOnly="True" HorizontalAlignment="Left"/>
                        <TextBlock Text="{common:Localize Key={x:Static system:LOC.CommonPluginVersion}}" Grid.Column="0" Grid.Row="1"
                               Margin="0,0,10,8" VerticalAlignment="Center" />
                        <TextBox x:Name="PluginVersionTxt" Grid.Column="1" Grid.Row="1" Margin="0,0,0,8" 
                             VerticalAlignment="Center" IsReadOnly="True" HorizontalAlignment="Left"/>
                        <TextBlock Text="{common:Localize Key={x:Static system:LOC.CommonLauncherVersion},Args='launcherName=Nile'}" Grid.Column="0" Grid.Row="2"
                               Margin="0,0,10,8" VerticalAlignment="Center" />
                        <TextBox x:Name="LauncherVersionTxt" Grid.Column="1" Grid.Row="2" Margin="0,0,0,8" VerticalAlignment="Center" 
                             IsReadOnly="True" HorizontalAlignment="Left"/>
                        <Button x:Name="CheckForNileUpdatesBtn" Grid.Column="2" Grid.Row="2" Margin="10,0,0,8" VerticalAlignment="Center"
                            Content="{common:Localize Key={x:Static system:LOC.ThirdPartyPlayniteCheckForUpdates}}" Click="CheckForNileUpdatesBtn_Click" />
                        <TextBlock Text="{common:Localize Key={x:Static system:LOC.CommonLauncherBinary},Args='launcherName=Nile'}" Grid.Column="0" Grid.Row="4"
                               Margin="0,0,10,5" VerticalAlignment="Center"/>
                        <TextBox x:Name="NileBinaryTxt" VerticalAlignment="Center" IsReadOnly="True" Grid.Column="1" Grid.Row="4" Margin="0,0,0,8"/>
                        <Button x:Name="OpenNileBinaryBtn" Margin="10,0,0,8" Content="{common:Localize Key={x:Static system:LOC.ThirdPartyPlayniteOpen}}" 
                                VerticalAlignment="Center"  Grid.Column="2" Grid.Row="4" Click="OpenNileBinaryBtn_Click" />
                        <TextBlock Text="{common:Localize Key={x:Static system:LOC.CommonGamesInstallationPath}}" Grid.Row="6" Grid.Column="0"
                               Margin="0,0,10,8" VerticalAlignment="Center"/>
                        <TextBox x:Name="GamesInstallationPathTxt" Margin="0,0,0,8" VerticalAlignment="Center" IsReadOnly="True" Grid.Column="1" Grid.Row="6" />
                        <Button x:Name="OpenGamesInstallationPathBtn" Margin="10,0,0,8" Content="{common:Localize Key={x:Static system:LOC.ThirdPartyPlayniteOpen}}" 
                                VerticalAlignment="Center" Click="OpenGamesInstallationPathBtn_Click" Grid.Column="2" Grid.Row="6" />
                        <TextBlock VerticalAlignment="Center" Grid.Column="0" Grid.Row="7" Margin="0,0,10,8" Text="{common:Localize Key={x:Static system:LOC.CommonLogFilesPath}}"/>
                        <TextBox x:Name="LogFilesPathTxt" Margin="0,0,0,8" VerticalAlignment="Center" IsReadOnly="True" Grid.Column="1" Grid.Row="7" />
                        <Button x:Name="OpenLogFilesPathBtn" Margin="10,0,0,8" Content="{common:Localize Key={x:Static system:LOC.ThirdPartyPlayniteOpen}}" 
                                VerticalAlignment="Center" Grid.Column="2"  Grid.Row="7" Click="OpenLogFilesPathBtn_Click" />
                        <Button Margin="0,15,8,8" Grid.Column="0" Grid.Row="8" Name="CopyRawDataBtn" Click="CopyRawDataBtn_Click" 
                            Grid.ColumnSpan="2" HorizontalAlignment="Left" Content="{common:Localize Key={x:Static system:LOC.CommonCopyRawDataToClipboard}}"/>
                        <TextBlock VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Grid.Column="0" Grid.Row="9" Margin="0,10,0,0">
                    <Hyperlink
                        NavigateUri="https://github.com/hawkeye116477/playnite-nile-plugin/wiki/troubleshooting"
                        Command="{x:Static pcmd:GlobalCommands.NavigateUrlCommand}"
                        CommandParameter="{Binding NavigateUri, RelativeSource={RelativeSource Self}}">
                        <Run Text="{common:Localize Key={x:Static system:LOC.ThirdPartyAmazonTroubleShootingIssues}}" />
                    </Hyperlink>
                        </TextBlock>
                        <TextBlock VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Grid.Column="0" Grid.Row="10" Margin="0,10,0,0">
                    <Hyperlink 
                        Name="ReportBugHyp"
                        Command="{x:Static pcmd:GlobalCommands.NavigateUrlCommand}"
                        CommandParameter="{Binding NavigateUri, RelativeSource={RelativeSource Self}}">
                        <Run Text="{common:Localize Key={x:Static system:LOC.CommonReportBug}}" />
                    </Hyperlink>
                        </TextBlock>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</UserControl>